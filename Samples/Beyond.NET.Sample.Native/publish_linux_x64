#!/usr/bin/env bash

set -e

OUTPUT_PRODUCT_NAME="libBeyondDotNETSampleNative"
BUILD_CONFIGURATION="Release"

OUTPUT_FILE_NAME="${OUTPUT_PRODUCT_NAME}.so"

VERBOSITY_LEVEL="normal"

RUNTIME_IDENTIFIER_X64="linux-x64"

BIN_DIR="bin"
PUBLISH_DIR="publish"

X64_BUILD_DIR="${BIN_DIR}/${BUILD_CONFIGURATION}/${RUNTIME_IDENTIFIER_X64}/${PUBLISH_DIR}"

X64_FILE_PATH="${X64_BUILD_DIR}/${OUTPUT_FILE_NAME}"

echo "Cleaning ${OUTPUT_PRODUCT_NAME}"
dotnet clean /p:Configuration=Release

echo "Building ${OUTPUT_PRODUCT_NAME} for x64"
dotnet publish -r ${RUNTIME_IDENTIFIER_X64} -v "${VERBOSITY_LEVEL}"
